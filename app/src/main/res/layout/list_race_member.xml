<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_gate_number"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:hint="18"
        />
    <!-- 馬名・血統など -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ディープインパクト"
            />
        <TextView
            android:id="@+id/text_horse_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="アヴニールマルシェ"
            />
        <TextView
            android:id="@+id/text_mother_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ヴィートマルシェ"
            />
        <TextView
            android:id="@+id/text_mothers_father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="フレンチデピュティ"
            />
        </LinearLayout>

    <!-- 性齢・騎手・調教師 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="牡"
                />
            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="5"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/text_horse_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="青鹿"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_jockey_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="北村宏司"
                />
            <TextView
                android:id="@+id/text_jockey_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="▲"
                />
            </LinearLayout>
        <TextView
            android:id="@+id/text_trainer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="藤沢和雄"
            />


        </LinearLayout>
</LinearLayout>