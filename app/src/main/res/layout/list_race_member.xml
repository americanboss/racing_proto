<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/container_bracket_number"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_bracket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="(1)"
            />
        <TextView
            android:id="@+id/text_gate_number"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="18"
            />
        </LinearLayout>
    <!-- 馬名・血統など -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_horse_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="アヴニールマルシェ"
                android:textColor="@color/base_text"
                android:textSize="@dimen/font_size_large"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                >
                <TextView
                    android:id="@+id/text_father_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:text="@string/label_father"
                    android:textColor="@color/base_text"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:id="@+id/text_father_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ディープインパクト"
                    android:textSize="@dimen/font_size_small"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                >
                <TextView
                    android:id="@+id/text_mother_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:text="@string/label_mother"
                    android:textColor="@color/base_text"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:id="@+id/text_mother_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ヴィートマルシェ"
                    android:textSize="@dimen/font_size_small"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/text_mothers_father_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="フレンチデピュティ"
                android:textColor="@color/base_text"
                android:textSize="@dimen/font_size_small"
                android:layout_marginLeft="35dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@android:drawable/star_big_on"
            android:id="@+id/favorite_star"
            />
        </FrameLayout>

    <!-- 性齢・騎手・調教師 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="牡"
                />
            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="5"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/text_horse_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="青鹿"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_jockey_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="北村宏司"
                />
            <TextView
                android:id="@+id/text_jockey_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="▲"
                />
            </LinearLayout>
        <TextView
            android:id="@+id/text_trainer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="藤沢和雄"
            />


        </LinearLayout>
    <!-- 馬体重その他 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_horse_weight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="624kg"
            />
        <TextView
            android:id="@+id/text_horse_weight_diff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="(+24)"
            />
        </LinearLayout>
</LinearLayout>